{
	
	// path to the python instance in your virtual envyroment
	// NOTA: mude na sua máquia, este é só um exemplo.
	"python.pythonPath": "env/bin/python",  
	
	// Python Settings
	"[python]": {
		"editor.formatOnSave": true,
		"editor.rulers": [79, 120],
	},
  
	// Django Html
	"[django-html]": {
		"editor.quickSuggestions": {
			"other": true,
			"comments": true,
			"strings": true
		}
	},

	// pylint, pep8, autopep8
	"python.linting.pep8Enabled": true,
	"python.linting.pylintEnabled": true,
	"python.formatting.provider": "autopep8",
	
	// django (extension)
	"files.associations": {
		"**/templates/*.html": "django-html",
		"**/templates/**/*.html": "django-html",
		"**/templates/*": "django-txt",
		"**/requirements{/**,*}.{txt,in}": "pip-requirements"
	},
	
	// django-intellisense
	// NOTA: mude na sua máquina, este é apenas um exemplo.
	"djangointellisense.projectRoot": "./",
  "djangointellisense.settingsModule": "project/settings.py"
	
}
